from flask import Flask, render_template, jsonify

app = Flask(__name__)

# Existing routes...

@app.route('/api/historical-events')
def historical_events():
    year = request.args.get('year')
    events = {
        '1969': ['Apollo 11 Moon Landing', 'Woodstock Festival'],
        '1989': ['Fall of the Berlin Wall', 'World Wide Web invented'],
        '2001': ['September 11 attacks', 'First iPod released'],
        '2020': ['COVID-19 Pandemic', 'Black Lives Matter protests'],
    }
    return jsonify({'events': events.get(year, [])})

if __name__ == '__main__':
    app.run(debug=True)